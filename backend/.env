# Configurações de ambiente para desenvolvimento
APP_NAME=Caminhos Conscientes API
APP_VERSION=1.0.0
DEBUG=true

# Banco de dados
DATABASE_URL=sqlite:///./app.db

# JWT
SECRET_KEY=your-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email (configurar com suas credenciais)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ML
MODEL_PATH=./models/
RETRAIN_INTERVAL_DAYS=7

# CORS (em produção, especificar domínios específicos)
ALLOWED_ORIGINS=["http://localhost:3000","https://localhost:3000","http://127.0.0.1:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

